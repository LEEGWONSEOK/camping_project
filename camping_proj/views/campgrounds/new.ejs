<% layout('layouts/boilerplate') %> 
<div class="row">
  <div class="mb-4">
    <h2 class="text-center">캠핑장 등록하기</h2>
  </div>
  <div class="col-4 offset-4">
    <form action="/campgrounds" method="POST">
      <div class="mb-4">
        <label for="title" class="form-label">캠핑장명</label>
        <input class="form-control" type="text" name="campground[title]" id="title" placeholder="캠핑장 이름을 입력해주세요">
      </div>
      <div class="mb-4">
        <label for="price" class="form-label">가격</label>
        <input class="form-control" type="text" name="campground[price]" id="price" placeholder="가격을 입력해주세요">
      </div>
      <div class="mb-4">
        <label for="description" class="form-label">설명</label>
        <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="소개글을 입력해주세요"></textarea>
      </div>
      <div class="mb-4">
        <label for="location" class="form-label">주소</label>
        <input class="form-control" type="text" name="campground[location]" id="location" placeholder="주소를 입력해주세요">
      </div>
      <div class="mb-4">
        <label for="image" class="form-label">사진</label>
        <input class="form-control" type="text" name="campground[image]" id="image" placeholder="사진을 올려주세요">
      </div>
      
      <div class="mb-4">
        <button class="btn btn-success">등록하기</button>
      </div>
    </form>
    <div>
      <a href="/campgrounds">모든 캠핑장 보기</a>
    </div>
  </div>
</div>



